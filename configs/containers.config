params.containers_path = "europe-west1-docker.pkg.dev/ngdx-nextflow/negedia"

process {

    withName: TRIMMING_BBDUK {
        container = "${params.containers_path}/bbmap:39.06" //bbduk v39.06
    }
    withName: FASTQC {
        container = "${params.containers_path}/fastqc:v0.12.1" //fastqc v0.12.1
    }
    withName: MULTIQC {
        container = "${params.containers_path}/multiqc:v1.18"
    }
    withName: KRAKEN2 {
        container = "${params.containers_path}/kraken2:v2.1.3"
    }
    withName: STAR_ALIGN_HUMAN {
        container = "${params.containers_path}/star:2.7.11b"
    }
    withName: BWA_MEM2_VIRUS {
        container = "${params.containers_path}/sentieon:202308.03" //aggiunto docker sentieon
    }
    withName: BWA_INDEX_VIRAL {
        container = "${params.containers_path}/sentieon:202308.03"
    }
    withName: SALMON_INDEX_VIRAL {
        container = "${params.containers_path}/salmon:v1.10.1" 
    }
    withName: SALMON_VIRAL {
        container = "${params.containers_path}/salmon:v1.10.1"
    }
}